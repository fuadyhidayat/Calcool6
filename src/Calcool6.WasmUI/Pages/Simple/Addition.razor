@page "/simple/addition"
@using Calcool6.Application

<Title Text="Addition" />
<MudPaper Class="d-flex align-center pa-4 mt-1">
    <div class="mx-3">
        <MudTextField Label="Input 1" Variant="Variant.Outlined" @bind-Value="input1"></MudTextField>
    </div>
    <div class="mx-3">
        <MudText Typo="Typo.h3">+</MudText>
    </div>
    <div class="mx-3">
        <MudTextField Label="Input 2" Variant="Variant.Outlined" @bind-Value="input2"></MudTextField>
    </div>
    <div class="mx-3">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Calculate">
            =
        </MudButton>
    </div>
    <div class="mx-3">
        <MudText Typo="Typo.h3">@result</MudText>
    </div>
</MudPaper>

@code {
    int input1;
    int input2;
    int result;

    void Calculate()
    {
        if (input1 == 3)
        {
            throw new InvalidOperationException("Gak boleh angka 3");
        }

        try
        {
            result = SimpleCalculation.Add(input1, input2);
        }
        catch (Exception ex)
        {
            _snackbar.Add(ex.Message);
        }
    }
}
